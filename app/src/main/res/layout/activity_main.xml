<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/relativeLayout"
    style="@style/Base.TextAppearance.AppCompat.Headline">
    <HorizontalScrollView android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/captionViewScroll">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:text="New Text"
            android:id="@+id/captionView"
            android:textColor="#fffaffff"
            android:textIsSelectable="true"
            android:background="@color/green"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:shadowColor="#000000"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="3.0"
            style="@style/TextAppearance.StatusBar.EventContent.Title"
            android:lines="1"
            android:linksClickable="false"
            android:theme="@style/Base.V21.Theme.AppCompat" />
    </HorizontalScrollView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textOfQuestionView"
        android:layout_below="@+id/captionView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="25sp"
        android:background="#ffd2e6ff"
        android:textColor="#ff000000" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/optionsView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textOfQuestionView"
        android:background="@color/optionsBackround"
        android:button="@null"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/highlighted"
        android:id="@+id/highlightButtonView"
        android:layout_below="@+id/optionsView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:onClick="onHighlightClick"
        android:background="@color/white" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/continueToNext"
        android:id="@+id/nextButtonView"
        android:layout_below="@+id/highlightButtonView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:onClick="onNextClick"
        android:background="@color/button"
        android:textColor="@color/white"/>

    <martinmatko.anatomy.DrawView
        android:id="@+id/drawView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        class="martinmatko.anatomy.DrawView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/nextButtonView"
        android:background="#ffffffff" />



</RelativeLayout>
